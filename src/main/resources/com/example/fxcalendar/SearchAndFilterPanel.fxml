<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fxcalendar.Controleur.SearchAndFilterPanel">
    <children>
        <TextField fx:id="searchField" promptText="Rechercher un événement..." />
        <Button text="Rechercher" onAction="#handleSearch" />
        <ComboBox fx:id="filterComboBox" onAction="#handleFilterChange">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Jour" />
                    <String fx:value="Semaine" />
                    <String fx:value="Mois" />
                </FXCollections>
            </items>
        </ComboBox>
    </children>
</VBox>
